<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
      version="3.0">
      
	<!-- FrontController (app.servlet.FrontController) -->
	<servlet>
		<servlet-name>FrontController</servlet-name>
		<servlet-class>app.servlet.FrontController</servlet-class>
	</servlet>

	<!-- Services below are routed via FrontController -->

	<!-- GUI service (app.servlet.GuiService) -->
	<servlet-mapping>
		<servlet-name>FrontController</servlet-name>
		<url-pattern>/molgenis.do</url-pattern>
	</servlet-mapping>
	
	<!-- XREF lookups (org.molgenis.framework.server.services.MolgenisXrefService)-->
	<servlet-mapping>
		<servlet-name>FrontController</servlet-name>
		<url-pattern>/xref</url-pattern>
	</servlet-mapping>
	
	<!-- Tmp file serving (org.molgenis.framework.server.services.MolgenisTmpFileService) -->
	<servlet-mapping>
		<servlet-name>FrontController</servlet-name>
		<url-pattern>/tmpfile</url-pattern>
	</servlet-mapping>
	
	<!-- File module (org.molgenis.omx.services.FileXXXXX)-->
	<servlet-mapping>
		<servlet-name>FrontController</servlet-name>
		<url-pattern>/uploadfile</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>FrontController</servlet-name>
		<url-pattern>/downloadfile</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>FrontController</servlet-name>
		<url-pattern>/viewfile</url-pattern>
	</servlet-mapping>
	
</web-app>