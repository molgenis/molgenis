  <name>app</name>
  <description>Default MOLGENIS application module containing all default plugins.</description>

  <properties>
    <owasp-check-format>HTML</owasp-check-format>

    <dockerfile.tag>${project.version}</dockerfile.tag>
    <dockerfile.repository>registry.hub.docker.com/molgenis/molgenis-app</dockerfile.repository>
    <dockerfile.warfile.version>${project.version}</dockerfile.warfile.version>
    <dockerfile.warfile>target/${project.artifactId}-${dockerfile.warfile.version}.war</dockerfile.warfile>

    <rpm.release.version>${project.version}</rpm.release.version>

    <dockerfile-maven-plugin.version>1.4.10</dockerfile-maven-plugin.version>
    <dependency-check-maven.version>3.1.2</dependency-check-maven.version>
    <rpm-maven-plugin.version>2.2.0</rpm-maven-plugin.version>
  </properties>

  <build>
    <resources>
      <resource>
        <directory>${project.basedir}/src/main/resources</directory>
        <filtering>true</filtering>
      </resource>
    </resources>
    <plugins>
      <!-- Docker image containing the warfile -->
      <!-- Does not run by default but you can explicitly call dockerfile:build dockerfile:tag dockerfile:push -->
      <plugin>
        <groupId>com.spotify</groupId>
        <artifactId>dockerfile-maven-plugin</artifactId>
        <version>${dockerfile-maven-plugin.version}</version>
        <configuration>
          <repository>${dockerfile.repository}</repository>
          <tag>${dockerfile.tag}</tag>
          <buildArgs>
            <WAR_FILE>${dockerfile.warfile}</WAR_FILE>
          </buildArgs>
          <useMavenSettingsForAuth>true</useMavenSettingsForAuth>
        </configuration>
      </plugin>
      <!-- create an RPM artifact of MOLGENIS -->
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>rpm-maven-plugin</artifactId>
        <version>${rpm-maven-plugin.version}</version>
        <configuration>
          <license>Apache License 2.0</license>
          <group>Application/Collectors</group>
          <packager>MOLGENIS</packager>
          <name>molgenis</name>
          <prefix>/usr/local</prefix>
          <changelogFile>CHANGELOG.md</changelogFile>
          <version>${rpm.release.version}</version>
          <defineStatements>
            <defineStatement>_unpackaged_files_terminate_build 0</defineStatement>
          </defineStatements>
          <needarch>false</needarch>
          <targetOS>linux</targetOS>
          <mappings>
            <mapping>
              <directory>/usr/local/share/molgenis/war</directory>
              <filemode>700</filemode>
              <username>molgenis</username>
              <groupname>molgenis</groupname>
              <sources>
                <source>
                  <location>target/${project.artifactId}-${rpm.release.version}.war</location>
                </source>
              </sources>
            </mapping>
            <mapping>
              <directory>/usr/local/share/molgenis/templates</directory>
              <filemode>700</filemode>
              <username>molgenis</username>
              <groupname>molgenis</groupname>
              <sources>
                <source>
                  <location>rpm/templates/molgenis-server.properties</location>
                </source>
              </sources>
            </mapping>
          </mappings>
          <preinstallScriptlet>
            <scriptFile>rpm/preinstall.bash</scriptFile>
            <fileEncoding>utf-8</fileEncoding>
          </preinstallScriptlet>
          <postinstallScriptlet>
            <scriptFile>rpm/postinstall.bash</scriptFile>
            <fileEncoding>utf-8</fileEncoding>
          </postinstallScriptlet>
        </configuration>
      </plugin>
    </plugins>
    <pluginManagement>
      <plugins>
        <!--
            Checks (transitive) dependencies for known vulnerabilities.
            > mvn org.owasp:dependency-check-maven:check
            > mvn org.owasp:dependency-check-maven:check -Dowasp-check-format=XML
        -->
        <plugin>
          <groupId>org.owasp</groupId>
          <artifactId>dependency-check-maven</artifactId>
          <version>${dependency-check-maven.version}</version>
          <configuration>
            <suppressionFile>owasp-check-suppressions.xml</suppressionFile>
            <format>${owasp-check-format}</format>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>

